    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_ManagementLayout.cshtml";
}
@{
    var thisYearTotal = Model.payment_details
        .Where(x => x.created_at.HasValue && x.created_at.Value.Year == DateTime.Now.Year && x.status=="success")
        .Sum(x => x.paidPrice);
    var monthlySales = new decimal[12];

    foreach (var order in Model.order_details)
    {
        if (order.created_at.HasValue && order.total.HasValue)
        {
            var month = order.created_at.Value.Month;
            monthlySales[month - 1] += order.total.Value;
        }
    }
    var monthlySalesArray = Newtonsoft.Json.JsonConvert.SerializeObject(monthlySales);


    var monthlyUser = new int[12];

    foreach (var user in Model.users.Where(x => x.status == true))
    {
        if (user.created_at.HasValue)
        {
            var month = user.created_at.Value.Month;

            monthlyUser[month - 1]++;
        }
    }

    var monthlyUserArray = Newtonsoft.Json.JsonConvert.SerializeObject(monthlyUser);



    var monthlyOrder = new int[12];

    foreach (var order in Model.order_details)
    {
        if (order.created_at.HasValue)
        {
            var month = order.created_at.Value.Month;

            monthlyOrder[month - 1]++;
        }
    }

    var monthlyOrderArray = Newtonsoft.Json.JsonConvert.SerializeObject(monthlyOrder);



    var monthlyProduct = new int[12];

    foreach (var product in Model.products.Where(x => x.status == true))
    {
        if (product.created_at.HasValue)
        {
            var month = product.created_at.Value.Month;

            monthlyProduct[month - 1]++;
        }
    }

    var monthlyProductArray = Newtonsoft.Json.JsonConvert.SerializeObject(monthlyProduct);


}
