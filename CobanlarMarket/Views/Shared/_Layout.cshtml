        $('#search-product').on('input', function (e) {

            var word = $('#search-product').val();

            $.ajax({
                url: '/Home/Search/',
                type: 'POST',
                data: { Word: word },

                success: function (result) {

                    console.log(result);
                    $('.search-result-parent').empty();
